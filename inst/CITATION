citHeader("To cite the 'sigident' package in publications, please use:")

year <- sub("-.*", "", meta$Date)
if (length(year) == 0) year <- format(Sys.Date(), "%Y")
note = paste("R package version", meta$Version)
auth = format(Filter(function(p) "aut" %in% p$role, as.person(meta$Author)), c("given", "family"))
title = paste("sigident:", meta$Title)
url = meta$URL


bibentry(
  bibtype = "Article",
  title = "A Toolbox for Functional Analysis and the Systematic Identification of Diagnostic and Prognostic Gene Expression Signatures Combining Meta-Analysis and Machine Learning",
  volume = "11",
  doi = "10.3390/cancers11101606",
  pages = "14",
  number = "1606",
  journal = "Cancers",
  author = "Johannes Vey and Lorenz A. Kapsner and Maximilian Fuchs and Philipp Unberath and Giulia Veronesi and Meik Kunz",
  year = "2019"
)


bibentry(
  bibtype = "manual",
  title = title,
  author = auth,
  year = year,
  note = note,
  url = url
)
